# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Configuration files
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
LICENSE text eol=lf
README.md text eol=lf
CHANGELOG.md text eol=lf
CONTRIBUTING.md text eol=lf
CODE_OF_CONDUCT.md text eol=lf

# Binary files
*.whl binary
*.tar.gz binary
*.zip binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary

# Mark generated files for language statistics
src/cloudformation_dataclasses/aws/*.py linguist-generated=true
