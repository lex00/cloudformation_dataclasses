[project]
name = "{{project_name}}"
version = "0.1.0"
requires-python = ">=3.10"
dependencies = [
    "cloudformation_dataclasses",
]

[project.scripts]
{{project_name}} = "{{project_name}}.__main__:main"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["{{project_name}}"]

[tool.hatch.build.targets.sdist]
include = ["{{project_name}}/**/*.py"]

[dependency-groups]
dev = [
    "mypy>=1.0",
]
